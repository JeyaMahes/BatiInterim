                    </div>
                {{ form_errors(form.villeNaissanceArtisan, {'attr': {'class': 'help is-danger'} }) }}
                </div>

                <div class="field">
                    {{ form_label(form.adresseArtisan, 'Adresse', {'label_attr': {'class': 'label'} }) }}
                    <div class="control"> 
                        {{ form_widget(form.adresseArtisan, {'attr': {'class': 'input'} }) }}
                    </div>
                {{ form_errors(form.adresseArtisan, {'attr': {'class': 'help is-danger'} }) }}
                </div>

                <div class="field">
                    {{ form_label(form.villeArtisan, 'Ville', {'label_attr': {'class': 'label'} }) }}
                    <div class="control"> 
                        {{ form_widget(form.villeArtisan, {'attr': {'class': 'input'} }) }}
                    </div>
                {{ form_errors(form.villeArtisan, {'attr': {'class': 'help is-danger'} }) }}
                </div>

                <div class="field">
                    {{ form_label(form.cpArtisan, 'Code Postale', {'label_attr': {'class': 'label'} }) }}
