                {{ form_errors(form.idcorpsmetier, {'attr': {'class': 'help is-danger'} }) }}
                </div>

                <div class="field">
                    {{ form_label(form.villeNaissanceArtisan, 'Ville de naissance', {'label_attr': {'class': 'label'} }) }}
